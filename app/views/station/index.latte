{extends '../layout.latte'}

{block content}

<h1>Stations</h1>
<p>Stations météo disponibles</p>
{foreach $stations as $station}
    <h3><a href="/station/{$station->station_id}">{$station->description}</a></h3>
    {if ($station->currentDataPoint)}<p><small>Temp: {$station->currentDataPoint->tempf} on {$station->currentDataPoint->dateutc}</small></p>{/if}
{/foreach}
{if ($username)}<p><a class="button" href="{route('station_create')}">Ajouter une station</a></p>{/if}
{/block}